<% if type = :new%>
  <% action_url = users_url %>
  <% button_text = "Sign up"%>
<% elsif type = :edit %>
  <% action_url = user_url(user)%>
  <% button_text = "change email/password"%>
<% end %>


<form class="session-form" action="<%= action_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label for="email">Email:
  <input id="email" type="text" name="user[email]" value="<% user.email%>">
</label>

<label for="password">Password:
  <input id="password" type="text" name="user[password]" value="<% user.password%>">
</label>

<input type="submit" value="<%= button_text %>"/>
</form>